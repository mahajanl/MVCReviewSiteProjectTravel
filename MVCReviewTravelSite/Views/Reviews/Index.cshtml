@model IEnumerable<MVCReviewTravelSite.Models.Review>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <div class="caption">
                    <h3>@Html.DisplayFor(modelItem => item.ReviewTitle)</h3>
                    <p>@Html.DisplayFor(modelItem => item.Category.Location), reviewed @Html.DisplayFor(modelItem => item.ReviewDate)</p>
                    <p>@Html.ActionLink("Details", "Details", new { id = item.ReviewID }, new { @class = "btn btn-primary", role = "button" }) </p>
                </div>
            </div>
        </div>
    }
</div>



